---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import Newsletter from '../components/Newsletter.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<h1 class="sr-only">Download CIB Mango Tree</h1>

	<!-- Hero Section -->
	<section class="bg-white py-12 md:py-20 px-4 md:px-8">
		<div class="max-w-7xl mx-auto text-center">
			<h2 class="text-[#2d5016] text-2xl md:text-3xl lg:text-4xl font-bold mb-4">
				Download CIB Mango Tree
			</h2>
			<p class="text-gray-600 text-base md:text-xl max-w-3xl mx-auto">
				Choose the right version for your operating system and get started immediately.
			</p>
		</div>
	</section>

	<!-- Download Cards Section -->
	<section class="bg-white pb-12 md:pb-16 px-4 md:px-8">
		<div class="max-w-5xl mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
				<!-- Windows Card -->
				<div class="bg-white border-2 border-[#2d5016] rounded-xl p-6 md:p-10 text-center">
					<div class="bg-[#2d5016] w-16 h-16 md:w-20 md:h-20 rounded-xl mx-auto mb-6 flex items-center justify-center">
						<!-- Windows Icon -->
						<svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
						</svg>
					</div>
					<h3 class="text-[#2d5016] text-xl md:text-2xl font-bold mb-4">Windows Exe</h3>
					<p class="text-gray-600 text-sm md:text-base mb-6">
						Standalone executable for Windows 10 and later. No additional installation required.
					</p>
					<div class="bg-gray-100 rounded-lg py-3 px-4 mb-6 flex justify-center gap-4 md:gap-8 text-sm text-gray-700">
						<span>Version: 2.1.0</span>
						<span>Size: 45.2 MB</span>
					</div>
					<a href="#" class="flex items-center justify-center gap-3 bg-[#2d5016] text-white py-4 px-6 rounded-lg font-semibold hover:bg-[#234012] transition-colors w-full mb-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
						</svg>
						Download for Windows
					</a>
					<p class="text-gray-500 text-xs">Compatible with Windows 10, 11</p>
				</div>

				<!-- macOS Card -->
				<div class="bg-white border-2 border-[#2d5016] rounded-xl p-6 md:p-10 text-center">
					<div class="bg-[#2d5016] w-16 h-16 md:w-20 md:h-20 rounded-xl mx-auto mb-6 flex items-center justify-center">
						<!-- Apple Icon -->
						<svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
						</svg>
					</div>
					<h3 class="text-[#2d5016] text-xl md:text-2xl font-bold mb-4">macOS Exe</h3>
					<div class="bg-gray-100 rounded-lg py-3 px-4 mb-6 flex justify-center gap-4 md:gap-8 text-sm text-gray-700">
						<span>Version: 2.1.0</span>
						<span>Size: 52.8 MB</span>
					</div>
					<a href="#" class="flex items-center justify-center gap-3 bg-[#2d5016] text-white py-4 px-6 rounded-lg font-semibold hover:bg-[#234012] transition-colors w-full mb-3">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
						</svg>
						Download for macOS (Intel Chip)
					</a>
					<a href="#" class="flex items-center justify-center gap-3 bg-[#2d5016] text-white py-4 px-6 rounded-lg font-semibold hover:bg-[#234012] transition-colors w-full mb-4">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
						</svg>
						Download for macOS (Apple Silicon)
					</a>
					<p class="text-gray-500 text-xs">Compatible with macOS 10.14+</p>
				</div>
			</div>

			<!-- Instructions -->
			<div class="text-center mt-8 md:mt-12 text-gray-700 text-sm md:text-base max-w-4xl mx-auto">
				<p class="mb-2">
					Download the version matching your operating system. For <strong>Mac</strong> users, navigate to <em>"About this Mac"</em> to learn what chip your machine is running.
				</p>
				<p>
					For <strong>Mac</strong> users, the program will appear in your <em>"Applications"</em> folder after installing the download file.
				</p>
			</div>

			<!-- Clone Repo Button -->
			<div class="flex justify-center mt-8">
				<a href="https://github.com/CIB-Mango-Tree" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-3 bg-[#2d5016] text-white py-3 px-6 rounded-lg font-semibold hover:bg-[#234012] transition-colors">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					Clone Repo Here
				</a>
			</div>
		</div>
	</section>

	<!-- How to Prepare Your Data Section -->
	<section class="bg-white py-12 md:py-16 px-4 md:px-8">
		<div class="max-w-7xl mx-auto">
			<div class="text-center mb-8 md:mb-12">
				<h2 class="text-[#2d5016] text-xl md:text-2xl lg:text-3xl font-normal mb-4">
					How to Prepare Your Data
				</h2>
				<p class="text-gray-600 text-sm md:text-base max-w-2xl mx-auto">
					Ensure your data is properly formatted for optimal analysis results with CIB Mango Tree.
				</p>
			</div>

			<!-- Data Preparation Steps Card -->
			<div class="bg-white rounded-2xl shadow-lg p-6 md:p-10 max-w-5xl mx-auto">
				<h3 class="text-[#2d5016] text-lg md:text-2xl font-bold text-center mb-8 md:mb-12">
					Data Preparation Steps
				</h3>

				<div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
					<!-- Step 1 -->
					<div class="text-center">
						<div class="bg-[#f0f7eb] w-12 h-12 md:w-16 md:h-16 rounded-full mx-auto mb-4 flex items-center justify-center">
							<span class="text-[#2d5016] text-lg md:text-2xl font-bold">1</span>
						</div>
						<h4 class="text-[#2d5016] font-bold text-sm md:text-base mb-2">Format Check</h4>
						<p class="text-gray-600 text-xs md:text-sm">
							Ensure your data is in a supported file format (CSV recommended)
						</p>
					</div>

					<!-- Step 2 -->
					<div class="text-center">
						<div class="bg-[#f0f7eb] w-12 h-12 md:w-16 md:h-16 rounded-full mx-auto mb-4 flex items-center justify-center">
							<span class="text-[#2d5016] text-lg md:text-2xl font-bold">2</span>
						</div>
						<h4 class="text-[#2d5016] font-bold text-sm md:text-base mb-2">Column Mapping</h4>
						<p class="text-gray-600 text-xs md:text-sm">
							Verify required column IDs are present and properly named
						</p>
					</div>

					<!-- Step 3 -->
					<div class="text-center">
						<div class="bg-[#f0f7eb] w-12 h-12 md:w-16 md:h-16 rounded-full mx-auto mb-4 flex items-center justify-center">
							<span class="text-[#2d5016] text-lg md:text-2xl font-bold">3</span>
						</div>
						<h4 class="text-[#2d5016] font-bold text-sm md:text-base mb-2">Data Cleaning</h4>
						<p class="text-gray-600 text-xs md:text-sm">
							Remove duplicates and handle missing values in key fields
						</p>
					</div>

					<!-- Step 4 -->
					<div class="text-center">
						<div class="bg-[#f0f7eb] w-12 h-12 md:w-16 md:h-16 rounded-full mx-auto mb-4 flex items-center justify-center">
							<span class="text-[#2d5016] text-lg md:text-2xl font-bold">4</span>
						</div>
						<h4 class="text-[#2d5016] font-bold text-sm md:text-base mb-2">Validation</h4>
						<p class="text-gray-600 text-xs md:text-sm">
							Run data validation to ensure compatibility before analysis
						</p>
					</div>
				</div>
			</div>

			<!-- Documentation Link -->
			<div class="text-center mt-8 md:mt-12">
				<p class="text-gray-600 text-sm md:text-base max-w-2xl mx-auto mb-6">
					For more comprehensive guides covering installation, configuration, and usage of our command line interface and dashboard tools.
				</p>
				<a href="/docs" class="inline-flex items-center justify-center bg-[#2d5016] text-white py-3 md:py-4 px-6 md:px-8 rounded-lg font-semibold hover:bg-[#234012] transition-colors shadow-lg">
					Go to Technical Documentation
				</a>
			</div>
		</div>
	</section>

	<!-- Support and Resources Section -->
	<section class="bg-[#fdf8e9] py-12 md:py-20 px-4 md:px-8">
		<div class="max-w-7xl mx-auto">
			<h2 class="text-[#2d5016] text-xl md:text-2xl lg:text-3xl text-center mb-8 md:mb-12">
				Support and Resources
			</h2>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 max-w-4xl mx-auto">
				<!-- Documentation Card -->
				<div class="bg-white border-2 border-gray-200 rounded-xl p-6 text-center">
					<div class="bg-[#2d5016] w-12 h-12 rounded-lg mx-auto mb-4 flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
						</svg>
					</div>
					<h3 class="text-[#2d5016] font-bold text-lg mb-2">Documentation</h3>
					<p class="text-gray-600 text-sm mb-6">
						Comprehensive guides, API references, and tutorials.
					</p>
					<a href="/docs" class="inline-block border-2 border-[#2d5016] text-[#2d5016] py-2 px-6 rounded-lg font-semibold hover:bg-[#2d5016] hover:text-white transition-colors">
						Browse Docs
					</a>
				</div>

				<!-- Community Card -->
				<div class="bg-white border-2 border-gray-200 rounded-xl p-6 text-center">
					<div class="bg-[#2d5016] w-12 h-12 rounded-lg mx-auto mb-4 flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
						</svg>
					</div>
					<h3 class="text-[#2d5016] font-bold text-lg mb-2">Community</h3>
					<p class="text-gray-600 text-sm mb-6">
						Join our Slack workspace for discussions and support.
					</p>
					<a href="#" class="inline-block border-2 border-[#2d5016] text-[#2d5016] py-2 px-6 rounded-lg font-semibold hover:bg-[#2d5016] hover:text-white transition-colors">
						Join Slack
					</a>
				</div>

				<!-- Report Issues Card -->
				<div class="bg-white border-2 border-gray-200 rounded-xl p-6 text-center">
					<div class="bg-[#2d5016] w-12 h-12 rounded-lg mx-auto mb-4 flex items-center justify-center">
						<svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</div>
					<h3 class="text-[#2d5016] font-bold text-lg mb-2">Report Issues</h3>
					<p class="text-gray-600 text-sm mb-6">
						Found a bug or have a feature request? Let us know.
					</p>
					<a href="https://github.com/CIB-Mango-Tree/issues" target="_blank" rel="noopener noreferrer" class="inline-block border-2 border-[#2d5016] text-[#2d5016] py-2 px-6 rounded-lg font-semibold hover:bg-[#2d5016] hover:text-white transition-colors">
						Submit Issue
					</a>
				</div>
			</div>
		</div>
	</section>

	<Newsletter />
	<Footer />
</Layout>

