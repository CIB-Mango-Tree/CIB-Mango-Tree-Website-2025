---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import ValuesBlock from '../components/ValuesBlock.astro';
import NewsQuote from '../components/NewsQuote.astro';
import SprintCalendar from '../components/SprintCalendar.astro';
import teamMeeting from '../assets/team-meeting.jpg';

const values = [
    {
        title: 'Transparency',
        description: 'Making online manipulation visible and understandable for informed analysis.',
        color: 'yellow' as const
    },
    {
        title: 'Civic Integrity',
        description: 'Strengthening democratic discourse by detecting and mitigating coordinated inauthentic behavior.',
        color: 'cyan' as const
    },
    {
        title: 'Reliability',
        description: 'Ensuring tools and analyses are accurate and trustworthy for all users.',
        color: 'green' as const
    }
];

const newsItems = [
    {
        title: 'Civic Tech in Action: Show and Tell',
        publication: 'Technical.ly',
        date: 'January 24, 2025',
        link: 'https://technical.ly/civic-news/civic-tech-dc-volunteers-climate-ris/',
        excerpt: 'Civic Tech DC held their annual public Show & Tell Night on Jan 22, where we demoed our software to government and nonprofit leaders.',
        imageUrl: 'https://technical.ly/wp-content/uploads/2025/01/IMG_0090-scaled.jpg'
    },
    {
        title: 'CIB Mango Tree at GW Open Source Conference',
        publication: 'GW Open Source Office',
        date: 'March 24, 2025',
        link: '#',
        excerpt: 'We are excited to announce that CIB Mango Tree will be presenting at GW\'s First Annual Open Source Conference.',
        imageUrl: 'https://www.gwu.edu/themes/gwsub/images/gw-primary-logo.svg'
    }
];
---

<Layout>
    <!-- Hero Section -->
    <section class="py-16 px-6 md:px-8 bg-background">
        <div class="max-w-4xl mx-auto">
            <h1 class="font-display italic text-4xl md:text-5xl lg:text-6xl text-text-primary mb-8 leading-tight">
                About Us
            </h1>
            
            <p class="text-xl text-text-muted mb-12 leading-relaxed">
                CIB Mango Tree is a collaborative project born from the belief that a healthy democracy requires a healthy information ecosystem.
            </p>

            <div class="mb-16">
                <img 
                    src={teamMeeting.src} 
                    alt="Team collaboration" 
                    class="w-full h-64 md:h-96 object-cover"
                />
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="py-12 px-6 md:px-8 bg-background">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-display italic text-3xl text-text-primary mb-6">Our Mission</h2>
            <p class="text-text-muted mb-6 leading-relaxed text-lg">
                We build open-source tools that empower researchers, journalists, and citizens to identify and analyze coordinated inauthentic behavior (CIB) on social media platforms. Our goal is to make sophisticated detection methods accessible to everyone who cares about online discourse integrity.
            </p>
            <p class="text-text-muted mb-6 leading-relaxed text-lg">
                A project of Civic Tech DC, founded in 2024, CIB Mango Tree empowers people to uncover how disruptive actors manipulate online discourse around health, politics, and society.
            </p>
            
            <!-- Taiwan Origin Callout -->
            <div class="bg-mango-yellow-light border-l-4 border-mango-yellow p-6 my-8">
                <p class="text-text-muted leading-relaxed italic">
                    Inspired by Taiwan, known both for its vibrant fruit and its open-source activism, CIB Mango Tree contributes to this spirit of activism in the heart of American democracy, Washington D.C.
                </p>
            </div>
        </div>
    </section>

    <!-- Who We Are Section -->
    <section class="py-12 px-6 md:px-8 bg-[#F8F6F2]">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-display italic text-3xl text-text-primary mb-6">Who We Are</h2>
            <p class="text-text-muted leading-relaxed text-lg">
                We are a diverse group of volunteers united by our commitment to digital democracy. Our team includes designers, engineers, product managers, policy experts, data scientists, and concerned citizens. As a Civic Tech DC project, we believe in the power of community-driven technology to address societal challenges.
            </p>
        </div>
    </section>

    <!-- Our Approach Section -->
    <section class="py-12 px-6 md:px-8 bg-background">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-display italic text-3xl text-text-primary mb-6">Our Approach</h2>
            <p class="text-text-muted leading-relaxed text-lg">
                CIB Mango Tree takes a "low-hanging fruit" approach to bot detection. We start with easy-to-run tests that reveal clear signs of unsophisticated coordinated behavior. As users climb the "mango tree," they encounter more advanced tools for tackling complex manipulation campaigns.
            </p>
        </div>
    </section>

    <!-- Values Section -->
    <section class="py-16 bg-background">
        <div class="max-w-4xl mx-auto px-6 md:px-8 mb-8">
            <h2 class="font-display italic text-3xl text-text-primary">Our Values</h2>
        </div>
        {values.map((value, index) => (
            <ValuesBlock 
                title={value.title}
                description={value.description}
                color={value.color}
                index={index}
            />
        ))}
    </section>

    <!-- Civic Tech DC Section -->
    <section class="py-16 px-6 md:px-8 bg-background">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-display italic text-3xl text-text-primary mb-6">About Civic Tech DC</h2>
            <p class="text-text-muted mb-8 leading-relaxed text-lg">
                CIB Mango Tree is a project within the Civic Tech DC community. Civic Tech DC is a 501(c)(3) non-profit that organizes biweekly "project night" meetups where technologists meet to plan and carry out software-based projects that solve civic problems, from climate change impacts to election access. Just as the CIB Mango Tree project is open to any contributor of all backgrounds and skill sets, anyone can attend the Civic Tech DC project nights and contribute to various projects in capacities ranging from project management, UI design to software development.
            </p>
            
            <SprintCalendar />
            
            <div class="flex flex-wrap gap-4 mt-8">
                <a 
                    href="https://codefordc.slack.com" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-mango-green-dark text-white px-6 py-3 font-semibold hover:bg-[#4A7A3A] transition-colors"
                >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
                    </svg>
                    Join Civic Tech DC Slack
                </a>
                <a 
                    href="https://www.civictechdc.org/donate" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-mango-yellow text-text-primary px-6 py-3 font-semibold hover:bg-[#FFD966] transition-colors"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    Donate
                </a>
            </div>
        </div>
    </section>

    <!-- In Media Section -->
    <section class="py-16 px-6 md:px-8 bg-[#F8F6F2]">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-display italic text-3xl text-text-primary mb-8">In the Media</h2>
            <div class="space-y-6">
                {newsItems.map(item => (
                    <NewsQuote 
                        title={item.title}
                        publication={item.publication}
                        date={item.date}
                        link={item.link}
                        excerpt={item.excerpt}
                        imageUrl={item.imageUrl}
                    />
                ))}
            </div>
        </div>
    </section>

    <!-- Join Community CTA -->
    <section class="py-16 px-6 md:px-8 bg-mango-yellow-light">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="font-display italic text-3xl text-text-primary mb-6">Join Our Community</h2>
            <p class="text-text-muted mb-8 text-lg">
                Whether you're a seasoned researcher or a curious citizen, there's a place for you in our community. We welcome contributors of all skill levels.
            </p>
            <a 
                href="/get-involved" 
                class="inline-flex items-center gap-2 bg-mango-green-dark text-white px-8 py-4 font-semibold text-lg hover:bg-[#4A7A3A] transition-all hover:-translate-y-1 hover:shadow-lg"
            >
                Get Involved
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>
    </section>

    <Footer />
</Layout>
