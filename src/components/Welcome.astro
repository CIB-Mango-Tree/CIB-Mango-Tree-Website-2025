---
import mangoAnimation from "../assets/mango_animation.gif";
import Download from "./Download.astro";
import Toolbar from "./Toolbar.astro";
---

<div id="container">
	<main>
		<section id="hero" class="bg-white py-16 px-8">
			<div class="max-w-7xl mx-auto flex items-center gap-12">
				<!-- Left side: Text content -->
				<div class="flex-1 flex flex-col justify-center">
					<div class="font-extrabold text-3xl md:text-4xl lg:text-5xl text-gray-900 mb-6 leading-tight">
						<div>Harvest Knowledge.</div>
						<div>Share the Fruit.</div>
						<div>Defend Democracy.</div>
					</div>
					<div class="text-lg md:text-xl text-gray-700 mb-8 max-w-2xl">
						An open-source library to detect and analyze coordinated
						inauthentic behavior online
					</div>
					<div class="w-fit">
						<Download />
					</div>
				</div> 
				<!-- Right side: Mango tree image -->
				<div class="flex-1 flex items-center justify-center">
					<img 
						class="w-full h-auto max-w-lg" 
						src={mangoAnimation.src} 
						alt="Mango tree illustration" 
					/>
				</div>
			</div>
		</section>
	</main>
</div>
