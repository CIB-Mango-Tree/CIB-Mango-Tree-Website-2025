---
import mangoAnimation from "../assets/mango_animation.gif";
---

<section class="bg-background py-16 px-6 md:px-8">
	<div class="max-w-7xl mx-auto">
		<div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-8">
			<!-- Left side: Text content -->
			<div class="flex-1 flex flex-col justify-center opacity-0 animate-fade-in">
				<h1 class="font-display italic text-4xl md:text-5xl lg:text-6xl text-text-primary mb-6 leading-tight tracking-tight">
					<span class="block headline-word">Harvest Knowledge.</span>
					<span class="block headline-word" style="animation-delay: 0.1s;">Share the Fruit.</span>
					<span class="block headline-word" style="animation-delay: 0.2s;">Defend Democracy.</span>
				</h1>
				<p class="text-lg md:text-xl text-text-muted mb-8 max-w-xl leading-relaxed opacity-0 animate-fade-in-up" style="animation-delay: 0.3s;">
					An open-source library to detect and analyze coordinated
					inauthentic behavior online
				</p>
				<div class="opacity-0 animate-fade-in-up" style="animation-delay: 0.4s;">
					<a 
						href="/download" 
						class="download-btn group inline-flex items-center justify-center gap-2 bg-mango-yellow text-text-primary px-8 py-4 font-semibold text-lg"
					>
						<svg class="w-5 h-5 btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
						</svg>
						Download Now
					</a>
				</div>
			</div>

			<!-- Right side: 2x2 Stats Grid with Mango Animation -->
			<div class="flex-1 opacity-0 animate-fade-in" style="animation-delay: 0.5s;">
				<div class="grid grid-cols-2 gap-4">
					<!-- Stat Card 1: Bad bots -->
					<div class="stat-card bg-[#FFE099] p-6 flex flex-col justify-center cursor-default">
						<div class="stat-number font-display italic text-4xl md:text-5xl text-text-primary mb-2">40%</div>
						<div class="text-sm text-text-primary/80">Bad bots in all internet traffic</div>
					</div>
					
					<!-- Stat Card 2: Worried about disinformation -->
					<div class="stat-card bg-[#E5F7F8] p-6 flex flex-col justify-center cursor-default" style="animation-delay: 0.1s;">
						<div class="stat-number font-display italic text-4xl md:text-5xl text-text-primary mb-2">87%</div>
						<div class="text-sm text-text-primary/80">Worried about disinformation</div>
					</div>
					
					<!-- Stat Card 3: Bot accounts spreading misinfo -->
					<div class="stat-card bg-[#FFF5E6] p-6 flex flex-col justify-center cursor-default" style="animation-delay: 0.2s;">
						<div class="stat-number font-display italic text-4xl md:text-5xl text-text-primary mb-2">33%</div>
						<div class="text-sm text-text-primary/80">Bot accounts spreading misinfo</div>
					</div>
					
					<!-- Stat Card 4: Mango Animation -->
					<div class="mango-card bg-[#8BBF72] p-4 flex items-center justify-center overflow-hidden" style="animation-delay: 0.3s;">
						<img 
							class="mango-img w-full h-auto max-h-36 object-contain" 
							src={mangoAnimation.src} 
							alt="Mango tree illustration" 
						/>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fadeIn 0.6s ease-out forwards;
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.6s ease-out forwards;
	}

	/* Headline word animation */
	.headline-word {
		opacity: 0;
		animation: slideIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
	}

	@keyframes slideIn {
		from {
			opacity: 0;
			transform: translateX(-20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	/* Download button hover */
	.download-btn {
		position: relative;
		overflow: hidden;
		transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
		box-shadow: 0 4px 12px rgba(255, 224, 153, 0.3);
	}

	.download-btn::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.4),
			transparent
		);
		transition: left 0.5s ease;
	}

	.download-btn:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(255, 224, 153, 0.5);
		background-color: #FFD966;
	}

	.download-btn:hover::before {
		left: 100%;
	}

	.download-btn:active {
		transform: translateY(-1px);
		box-shadow: 0 2px 8px rgba(255, 224, 153, 0.3);
	}

	.btn-icon {
		transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.download-btn:hover .btn-icon {
		animation: bounceDown 0.5s ease infinite;
	}

	@keyframes bounceDown {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(3px); }
	}

	/* Stat cards hover */
	.stat-card {
		transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
		position: relative;
	}

	.stat-card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: rgba(255, 255, 255, 0);
		transition: background 0.3s ease;
	}

	.stat-card:hover {
		transform: scale(1.05) translateY(-4px);
		box-shadow: 0 12px 28px rgba(45, 58, 36, 0.15);
	}

	.stat-card:hover::after {
		background: rgba(255, 255, 255, 0.1);
	}

	.stat-number {
		transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.stat-card:hover .stat-number {
		transform: scale(1.1);
	}

	/* Mango card special hover */
	.mango-card {
		transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.mango-card:hover {
		transform: scale(1.05) translateY(-4px);
		box-shadow: 0 12px 28px rgba(90, 138, 74, 0.3);
	}

	.mango-img {
		transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.mango-card:hover .mango-img {
		transform: scale(1.15) rotate(5deg);
	}
</style>
