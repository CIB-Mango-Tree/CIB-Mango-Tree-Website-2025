---
import mangoAnimation from "../assets/mango_animation.gif";
---

<section class="bg-background py-16 px-6 md:px-8">
	<div class="max-w-7xl mx-auto">
		<div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-8">
			<!-- Left side: Text content -->
			<div class="flex-1 flex flex-col justify-center opacity-0 animate-fade-in">
				<h1 class="font-display italic text-4xl md:text-5xl lg:text-6xl text-text-primary mb-6 leading-tight tracking-tight">
					<span class="block">Harvest Knowledge.</span>
					<span class="block">Share the Fruit.</span>
					<span class="block">Defend Democracy.</span>
				</h1>
				<p class="text-lg md:text-xl text-text-muted mb-8 max-w-xl leading-relaxed opacity-0 animate-fade-in-up" style="animation-delay: 0.2s;">
					An open-source library to detect and analyze coordinated
					inauthentic behavior online
				</p>
				<div class="flex flex-col sm:flex-row gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 0.3s;">
					<a 
						href="/download" 
						class="inline-flex items-center justify-center gap-2 bg-mango-yellow text-text-primary px-8 py-4 font-semibold text-lg hover:bg-[#FFD966] transition-colors"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
						</svg>
						Download Now
					</a>
					<a 
						href="/docs" 
						class="inline-flex items-center justify-center gap-2 border-2 border-border-color text-text-primary px-8 py-4 font-semibold text-lg hover:bg-background-alt transition-colors"
					>
						View Documentation
					</a>
				</div>
			</div>

			<!-- Right side: Stats Bento Grid + Mango Animation -->
			<div class="flex-1 flex flex-col gap-4 opacity-0 animate-fade-in" style="animation-delay: 0.4s;">
				<!-- Stats Grid -->
				<div class="grid grid-cols-2 gap-4">
					<!-- Stat Card 1 -->
					<div class="bg-background-alt border border-border-color p-6">
						<div class="text-3xl font-bold text-mango-green-dark mb-1">3+</div>
						<div class="text-sm text-text-muted">Detection Tools</div>
					</div>
					<!-- Stat Card 2 -->
					<div class="bg-background-alt border border-border-color p-6">
						<div class="text-3xl font-bold text-mango-green-dark mb-1">100%</div>
						<div class="text-sm text-text-muted">Open Source</div>
					</div>
					<!-- Stat Card 3 - Full Width -->
					<div class="col-span-2 bg-mango-green-dark text-white p-6">
						<div class="text-3xl font-bold mb-1">Local-First</div>
						<div class="text-sm opacity-80">Your data stays on your machine</div>
					</div>
				</div>

				<!-- Mango Animation -->
				<div class="flex items-center justify-center p-4">
					<img 
						class="w-full max-w-xs h-auto" 
						src={mangoAnimation.src} 
						alt="Mango tree illustration" 
					/>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fadeIn 0.6s ease-out forwards;
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.6s ease-out forwards;
	}
</style>
