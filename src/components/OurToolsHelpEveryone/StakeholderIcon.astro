---
interface StakeholderProps {
  title: string;
  description: string;
}
const { title, description } = Astro.props as StakeholderProps;
---

<div class="flex flex-col items-start">
  <div
    class="w-16 h-16 bg-[#F0F7EB] drop-shadow rounded-lg border-2 border-[#D5E4CC] flex items-center justify-center mb-4"
  >
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-700">
    {description}
  </p>
</div>
