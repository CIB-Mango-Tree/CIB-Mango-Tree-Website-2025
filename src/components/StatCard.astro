---
import { cn } from "@utils/classMerge";

interface Props {
  href: string;
  class?: string;
}

const { class: className, href } = Astro.props;
const componentClasses: string = cn(
  "flex flex-col justify-center p-6 cursor-pointer transition transform-gpu duration-300 ease-default hover:scale-[1.05] hover:-translate-x-1 hover:shadow-[0_0.75rem_1.75rem_rgba(45,58,36,0.15)] hover:after:left-0 hover:after:w-0 hover:after:-mb-0.5 hover:after:h-0.5 hover:after:transition-[width] hover:after:bg-white/10 hover:*:data-stat-number:scale-[1.1]",
  {
    [className as string]: className != null && className.length > 0,
  },
);
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={componentClasses}
>
  <span
    class="text-3xl md:text-4xl lg:text-5xl text-primary font-bold mb-2 transition-transform transform-gpu duration-300 ease-default"
    data-stat-number
  >
    <slot name="percentage" />
  </span>
  <sup
    class="text-2xl font-bold text-mango-green-dark transition-transform transform-gpu duration-300 ease-default"
    data-stat-number
  >
    <slot name="index" />
  </sup>
  <div class="text-xs md:text-sm text-primary/80">
    <slot />
  </div>
</a>
