---
import { Download, BookOpen, Users } from '@lucide/astro';
---

<section class="py-16 px-6 md:px-8 bg-mango-green-dark">
    <div class="max-w-5xl mx-auto text-center">
        <h2 class="font-display italic text-3xl md:text-4xl text-white mb-4">
            Ready to Make an Impact?
        </h2>
        <p class="text-white/80 text-lg mb-10 max-w-2xl mx-auto">
            Join our community of researchers, developers, and citizens working to protect digital democracy.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <!-- Primary CTA - Download (most prominent) -->
            <a 
                href="/download" 
                class="cta-btn cta-primary inline-flex items-center gap-2 bg-white text-mango-green-dark px-8 py-4 font-semibold text-lg"
            >
                <Download class="w-5 h-5" />
                Download Now
            </a>
            
            <!-- Secondary CTA - Get Involved -->
            <a 
                href="/get-involved" 
                class="cta-btn cta-secondary inline-flex items-center gap-2 bg-mango-yellow text-text-primary px-8 py-4 font-semibold text-lg"
            >
                <Users class="w-5 h-5" />
                Get Involved
            </a>
            
            <!-- Tertiary CTA - Documentation -->
            <a 
                href="/docs" 
                class="cta-btn cta-tertiary inline-flex items-center gap-2 bg-transparent text-white border-2 border-white/50 px-8 py-4 font-semibold text-lg"
            >
                <BookOpen class="w-5 h-5" />
                View Docs
            </a>
        </div>
    </div>
</section>

<style>
    .cta-btn {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
        overflow: hidden;
    }

    .cta-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s ease;
    }

    .cta-btn:hover::before {
        left: 100%;
    }

    .cta-primary {
        box-shadow: 0 4px 16px rgba(255, 255, 255, 0.3);
    }

    .cta-primary:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 24px rgba(255, 255, 255, 0.4);
    }

    .cta-secondary {
        box-shadow: 0 4px 16px rgba(255, 224, 153, 0.3);
    }

    .cta-secondary:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 24px rgba(255, 224, 153, 0.4);
        background-color: #FFD966;
    }

    .cta-tertiary:hover {
        transform: translateY(-3px) scale(1.02);
        background-color: rgba(255, 255, 255, 0.1);
        border-color: white;
    }

    .cta-btn:active {
        transform: translateY(-1px) scale(1);
    }
</style>
