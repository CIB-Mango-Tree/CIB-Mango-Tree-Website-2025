---
import logo from '../assets/logo.png';
import { Github, Instagram, Linkedin, Slack, Heart } from '@lucide/astro';
---

<footer class="bg-mango-green-dark text-white py-12 px-6 md:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Logo Section -->
        <div class="mb-8 flex justify-center md:justify-start">
            <a href="/" class="logo-link">
                <img src={logo.src} alt="CIB Mango Tree Logo" class="h-20 w-auto" />
            </a>
        </div>

        <!-- Bottom Section with Copyright and Social Icons -->
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 pt-8 border-t border-white/20">
            <!-- Left: Copyright and Project Info -->
            <div class="flex flex-col md:flex-row gap-4 md:gap-6 text-sm text-center md:text-left">
                <span class="flex items-center gap-2 justify-center md:justify-start">
                    Copyright Â© CIB Mango Tree 2025
                </span>
                <span>A Civic Tech DC Project</span>
            </div>

            <!-- Right: Social Media Icons and Donate -->
            <div class="flex gap-4 items-center">
                <a 
                    href="https://www.civictechdc.org/donate" 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="donate-btn inline-flex items-center gap-2 bg-mango-yellow text-text-primary px-4 py-2 text-sm font-semibold"
                >
                    <Heart class="w-4 h-4" />
                    Donate
                </a>
                <div class="flex gap-2 items-center">
                    <a href="https://codefordc.slack.com" target="_blank" rel="noopener noreferrer" aria-label="Slack" class="social-icon slack">
                        <Slack class="w-6 h-6" />
                    </a>
                    <a href="#" aria-label="Instagram" class="social-icon instagram">
                        <Instagram class="w-6 h-6" />
                    </a>
                    <a href="#" aria-label="LinkedIn" class="social-icon linkedin">
                        <Linkedin class="w-6 h-6" />
                    </a>
                    <a href="https://github.com/civictechdc/cib-mango-tree" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="social-icon github">
                        <Github class="w-6 h-6" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    .logo-link {
        display: inline-block;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .logo-link:hover {
        transform: scale(1.05);
    }

    .logo-link:hover img {
        filter: drop-shadow(0 4px 12px rgba(255, 224, 153, 0.4));
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.625rem;
        border-radius: 50%;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
        overflow: hidden;
    }

    .social-icon::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: currentColor;
        opacity: 0;
        transform: scale(0);
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        transform: translateY(-4px) scale(1.1);
    }

    .social-icon:hover::before {
        opacity: 0.15;
        transform: scale(1);
    }

    .social-icon:active {
        transform: translateY(-2px) scale(1.05);
    }

    .social-icon.slack:hover {
        color: #E01E5A;
        box-shadow: 0 4px 16px rgba(224, 30, 90, 0.3);
    }

    .social-icon.instagram:hover {
        color: #E4405F;
        box-shadow: 0 4px 16px rgba(228, 64, 95, 0.3);
    }

    .social-icon.linkedin:hover {
        color: #0A66C2;
        box-shadow: 0 4px 16px rgba(10, 102, 194, 0.3);
    }

    .social-icon.github:hover {
        color: #FFE099;
        box-shadow: 0 4px 16px rgba(255, 224, 153, 0.3);
    }

    .donate-btn {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .donate-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(255, 224, 153, 0.4);
        background-color: #FFD966;
    }
</style>
