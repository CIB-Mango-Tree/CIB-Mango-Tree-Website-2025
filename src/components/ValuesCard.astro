---
const { icon, title, description } = Astro.props;
---

<div class="bg-white shadow-lg p-6 rounded-lg text-center min-h-[10rem]">
  <div class="flex justify-center items-center">
    <div class="mb-4 size-16 bg-[#F0F7EB] rounded-full p-4">
      <img src={icon} alt={title} class="size-8 fill-[#6A994E]" />
    </div>
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>