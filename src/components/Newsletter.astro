<section class="py-12 md:py-16 px-4 md:px-8 bg-[#FFD566]">
    <div class="max-w-2xl mx-auto">
        <h2 class="text-center text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-8">Subscribe to our Newsletter</h2>

        <form class="flex flex-col sm:flex-row gap-4 justify-center items-stretch sm:items-center">
            <input
                type="email"
                placeholder="Enter your email"
                class="flex-1 px-4 py-3 rounded-lg bg-white border-0 focus:outline-none focus:ring-2 focus:ring-[#609949] text-gray-900 placeholder-gray-400 text-base"
                required
            />
            <button
                type="submit"
                class="bg-[#7BAF6B] text-white px-6 md:px-8 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity whitespace-nowrap"
            >
                Subscribe
            </button>
        </form>
    </div>
</section>

