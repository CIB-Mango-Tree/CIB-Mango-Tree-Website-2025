<section class="py-12 px-6 md:px-8 bg-mango-yellow">
    <div class="max-w-3xl mx-auto">
        <h2 class="font-display italic text-2xl md:text-3xl text-text-primary text-center mb-8" style="letter-spacing: -0.02em;">
            Subscribe to our Newsletter
        </h2>
        
        <form class="flex flex-col sm:flex-row gap-4 justify-center items-stretch">
            <input
                type="email"
                placeholder="Enter your email"
                class="flex-1 px-4 py-3 bg-white border border-border-color focus:outline-none focus:ring-2 focus:ring-mango-green-dark text-text-primary placeholder-text-light"
                required
            />
            <button
                type="submit"
                class="bg-mango-green-dark text-white px-8 py-3 font-semibold hover:bg-[#4A7A3A] transition-colors"
            >
                Subscribe
            </button>
        </form>
    </div>
</section>
