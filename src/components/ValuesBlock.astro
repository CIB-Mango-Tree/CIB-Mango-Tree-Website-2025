---
import { resolveClasses } from "@utils/classMerge";

interface Props {
  iconPath?: string;
  class?: string;
}

const { iconPath, class: className } = Astro.props;

const containerClasses: string = resolveClasses(
  "flex py-12 md:py-16 px-6 md:px-8 animate-delay-100 w-full justify-center opacity-0 animate-slide-in group",
  className,
);
---

<div class={containerClasses}>
  <div
    class="w-4xl flex flex-col md:flex-row items-start md:items-center gap-6"
  >
    {
      iconPath && (
        <div class="shrink-0 w-16 h-16 flex items-center justify-center transition-all duration-300 ease-default group-hover:scale-110 group-hover:-rotate-5">
          <svg
            class="w-8 h-8 text-mango-green-dark"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d={iconPath}
            />
          </svg>
        </div>
      )
    }

    <div class="flex flex-col flex-1">
      <h3 class="font-bold text-2xl md:text-3xl mb-3">
        <slot name="title" />
      </h3>
      <p class="text-muted leading-relaxed text-lg">
        <slot name="description" />
      </p>
    </div>
  </div>
</div>
