---
interface Props {
    title: string;
    description: string;
    color: 'yellow' | 'cyan' | 'green';
    index: number;
}

const { title, description, color, index } = Astro.props;

const colorClasses = {
    yellow: 'bg-mango-yellow',
    cyan: 'bg-[#E5F7F8]',
    green: 'bg-mango-green-light'
};

const iconPaths = {
    'Transparency': 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
    'Civic Integrity': 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    'Reliability': 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
};
---

<div 
    class={`values-block ${colorClasses[color]} py-12 md:py-16 px-6 md:px-8`}
    style={`animation-delay: ${index * 0.1}s;`}
>
    <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-start md:items-center gap-6">
        <div class="value-icon flex-shrink-0 w-16 h-16 bg-white/50 flex items-center justify-center">
            <svg class="w-8 h-8 text-mango-green-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPaths[title] || iconPaths['Transparency']} />
            </svg>
        </div>
        <div class="flex-1">
            <h3 class="font-display italic text-2xl md:text-3xl text-text-primary mb-3">
                {title}
            </h3>
            <p class="text-text-muted leading-relaxed text-lg">
                {description}
            </p>
        </div>
    </div>
</div>

<style>
    .values-block {
        opacity: 0;
        animation: slideInValue 0.6s ease-out forwards;
    }

    @keyframes slideInValue {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .value-icon {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .values-block:hover .value-icon {
        transform: scale(1.1) rotate(-5deg);
        background-color: rgba(255, 255, 255, 0.8);
    }
</style>
