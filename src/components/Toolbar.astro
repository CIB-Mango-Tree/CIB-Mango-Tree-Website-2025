---
import Button from "./Button.astro";
import Download from "./Download.astro";
import logo from '../assets/logo.png';
---

<!-- <header class="toolbar" role="banner"> -->
    <div class="bg-mango-green w-full h-fit top-0 z-50 sticky flex justify-between items-center px-4 py-3 md:px-8">
       <Button href="/">
            <img src={logo.src} alt="" class="brand__img w-9 h-9" />
        </Button>

        <nav id="toolbar-nav" class="nav hidden md:flex" role="navigation" aria-label="Main">
            <ul class="flex gap-6">
                <li><a href="/about" class="nav-link">About Us</a></li>
                <li><a href="/docs" class="nav-link">Documentation</a></li>
                <li><a href="/resources" class="nav-link">Resources</a></li>
                <li><a class="cta" href="/get-involved">Get Involved</a></li>
                <li><Download /></li>
            </ul>
        </nav>

        <!-- Mobile menu button -->
        <button class="md:hidden toggle" id="mobile-menu-toggle" aria-label="Toggle navigation">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile menu -->
    <nav class="mobile-menu md:hidden" id="mobile-menu" role="navigation" aria-label="Mobile">
        <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/docs">Documentation</a></li>
            <li><a href="/resources">Resources</a></li>
            <li><a class="cta" href="/get-involved">Get Involved</a></li>
            <li><Download /></li>
        </ul>
    </nav>
<!-- </header> -->

<style>
    .nav-link {
        color: white;
        text-decoration: none;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    .nav-link:hover,
    .nav-link:focus {
        color: white;
        background: rgba(255, 255, 255, 0.1);
        outline: none;
    }

    .cta {
        background: linear-gradient(90deg, #fb923c, #f97316);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    .cta:hover {
        background: linear-gradient(90deg, #f97316, #ea580c);
    }

    /* Mobile menu styles */
    .mobile-menu {
        position: fixed;
        top: 4rem;
        right: 1rem;
        background: white;
        border-radius: 0.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transform-origin: top right;
        transition: all 0.2s;
        opacity: 0;
        scale: 0.95;
        translate: 0 -6px;
        pointer-events: none;
        z-index: 50;
    }

    .mobile-menu.open {
        opacity: 1;
        scale: 1;
        translate: 0 0;
        pointer-events: auto;
    }

    .mobile-menu ul {
        display: flex;
        flex-direction: column;
        padding: 0.5rem;
        min-width: 200px;
    }

    .mobile-menu a {
        display: block;
        padding: 0.75rem 1rem;
        color: rgb(31 41 55);
        border-radius: 0.375rem;
    }

    .mobile-menu a:hover {
        background: rgb(243 244 246);
    }

    .toggle {
        background: transparent;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        cursor: pointer;
        color: white;
    }
</style>

<script>
    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');

        if (toggleButton && mobileMenu) {
            toggleButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('open');
            });

            // Close menu when clicking outside
            document.addEventListener('click', (e) => {
                if (!mobileMenu.contains(e.target) && !toggleButton.contains(e.target)) {
                    mobileMenu.classList.remove('open');
                }
            });
        }
    });
</script>