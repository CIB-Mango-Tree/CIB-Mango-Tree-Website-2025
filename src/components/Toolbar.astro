---
import Button from "./Button.astro";
import Download from "./Download.astro";
import logo from '../assets/logo.png';
---

<!-- <header class="toolbar" role="banner"> -->
    <div class="bg-mango-green w-full h-fit top-0 z-50 sticky flex justify-between">
       <Button href="/">
            <img src={logo.src} alt="" class="brand__img" />
        </Button>

        <nav id="toolbar-nav" class="nav" role="navigation" aria-label="Main">
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/docs">Documentation</a></li>
                <li><a href="/resources">Resources</a></li>
                <li><a class="cta" href="/get-involved">Get Involved</a></li>
                <li><Download /></li>
            </ul>
        </nav>
    </div>
<!-- </header> -->

<style>

    .inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0.6rem 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .brand {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        text-decoration: none;
        color: inherit;
    }

    .brand__img {
        width: 36px;
        height: 36px;
        object-fit: contain;
    }

    .brand__name {
        font-weight: 700;
        font-size: 1rem;
    }

    .toggle {
        background: transparent;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.35rem;
        cursor: pointer;
        color: var(--fg);
    }

    .nav {
        display: flex;
    }

    .nav ul {
        display: flex;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav a {
        text-decoration: none;
        color: white;
        padding: 0.5rem 0.6rem;
        border-radius: 6px;
        font-weight: 600;
    }

    .nav a:hover,
    .nav a:focus {
        color: white;
        background: rgba(255,255,255,0.1);
        outline: none;
    }

    .nav .cta {
        background: linear-gradient(90deg, var(--accent), #ffb26b);
        color: white;
        padding: 0.5rem 0.9rem;
    }

    /* Mobile */
    @media (max-width: 780px) {
        .brand__name { display: none; }
        .nav {
            position: absolute;
            top: 64px;
            right: 1rem;
            background: var(--bg);
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(2,6,23,0.08);
            overflow: hidden;
            transform-origin: top right;
            transition: opacity 180ms ease, transform 180ms ease;
            opacity: 0;
            pointer-events: none;
            transform: scale(0.95) translateY(-6px);
        }

        .nav.open {
            opacity: 1;
            pointer-events: auto;
            transform: scale(1) translateY(0);
        }

        .nav ul {
            flex-direction: column;
            padding: 0.5rem;
            gap: 0;
            min-width: 200px;
        }

        .nav a {
            display: block;
            padding: 0.65rem 0.9rem;
        }
    }

    /* Hide toggle on larger screens */
    @media (min-width: 781px) {
        .toggle { display: none; }
        .nav { position: static; opacity: 1; transform: none; pointer-events: auto; }
    }
</style>