---
import StickyNote from "./StickyNote.astro";
---

<section class="bg-[#E5F7F8] h-fit min-h-100 relative w-full overflow-hidden">
  <div class="bg-white h-32">
    <div
      class="title-text text-center text-mango-green text-2xl font-display italic"
    >
      Did you know?
    </div>
  </div>

  <div
    class="bg-white h-32"
    style={{
      clipPath: "ellipse(70% 70% at top)",
      WebkitClipPath: "ellipse(70% 70% at top)",
    }}
  >
  </div>
  <div
    class="sticky-notes-container flex flex-row justify-center items-center gap-10"
  >
    <div class="note-wrapper -rotate-13 animate-delay-100">
      <StickyNote>Text Goes Here</StickyNote>
    </div>
    <div class="note-wrapper -rotate-5 -translate-y-14 animate-delay-200">
      <StickyNote>Text Goes Here</StickyNote>
    </div>
    <div class="note-wrapper rotate-5 -translate-y-14 animate-delay-300">
      <StickyNote>Text Goes Here</StickyNote>
    </div>
    <div class="note-wrapper rotate-13 animate-delay-400">
      <StickyNote>Text Goes Here</StickyNote>
    </div>
  </div>

  <div
    class="bg-[#C8F0F1] h-32 absolute bottom-0 w-full"
    style={{
      clipPath: "ellipse(50% 100% at bottom)",
      WebkitClipPath: "ellipse(50% 100% at bottom)",
    }}
  >
  </div>
</section>

<style>
  .title-text {
    opacity: 0;
    animation: fadeInDown 0.6s ease forwards;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .note-wrapper {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    opacity: 0;
    animation: floatIn 0.6s ease forwards;
  }

  @keyframes floatIn {
    from {
      opacity: 0;
      transform: translateY(30px) rotate(var(--tw-rotate, 0));
    }
    to {
      opacity: 1;
      transform: translateY(0) rotate(var(--tw-rotate, 0));
    }
  }

  .note-wrapper:hover {
    z-index: 20;
  }
</style>

