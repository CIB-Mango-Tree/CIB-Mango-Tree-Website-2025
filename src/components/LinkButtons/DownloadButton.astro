---
import { Download } from "@lucide/astro";
import { resolveClasses } from "@utils/classMerge";

interface Props {
  href: string;
  class?: string;
  size?: "sm" | "md" | "lg";
}

const { href, size = "md", class: className } = Astro.props;
const buttonClasses: string = resolveClasses(
  "inline-flex items-center justify-center gap-2 relative overflow-hidden transition-all transform-gpu ease-default duration-300 shadow-[0_0.25rem_0.75rem_rgba(90,138,74,0.3)] group bg-mango-green-dark text-white font-semibold glass-shine-30 hover:-translate-y-[0.25rem] hover:shadow-[0_0.5rem_1.5rem_rgba(90,138,74,0.5)] hover:bg-[#4a7a3a] hover:*:data-download-icon:animate-bounce active:-translate-y-[0.0625rem] active:shadow-[0_0.125rem_0.5rem_rgba(90,138,74,0.3)]",
  className,
  {
    "px-8 py-4 text-lg": size === "lg",
    "px-6 py-3": size === "md",
    "px-4 py-2": size === "sm",
  },
);
---

<a href={href} class={buttonClasses}>
  <Download class="w-5 h-5 btn-icon" data-download-icon />
  Download Now
</a>
