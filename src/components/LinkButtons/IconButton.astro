---
import { resolveClasses } from "@utils/classMerge";

interface Props {
  href: string;
  class?: string;
  label?: string;
}

const { href, label, class: className } = Astro.props;
const buttonClasses: string = resolveClasses(
  "flex items-center justify-center relative overflow-hidden p-2.5 rounded-full transition-all ease-default duration-300 hover:-translate-y-1 hover:scale-100 before:absolute before:inset-0 before:rounded-full before:bg-current before:opacity-0 before:scale-0 before:transition-all before:duration-300 before:ease-linear hover:before:opacity-15 hover:before:scale-100 active:-translate-y-0.5 active:scale-105",
  className,
);
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={label}
  class={buttonClasses}
>
  <slot />
</a>
